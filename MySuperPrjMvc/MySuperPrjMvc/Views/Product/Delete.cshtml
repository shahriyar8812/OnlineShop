@using Domain.Entities
@model Product

<h2>Delete Product</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>

    <div class="form-group">
        <label class="control-label">دسته‌بندی</label>
        <input class="form-control" value="@ViewBag.CategoryName" readonly />
    </div>

    <button type="submit" class="btn btn-danger">حذف</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">لغو</a>
</form>
